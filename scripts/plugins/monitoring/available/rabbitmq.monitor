# RabbitMQ 监控配置
CHECK_INTERVAL=60
MAX_QUEUE_SIZE=10000
MIN_CONSUMERS=1
MAX_MEMORY_USAGE=80

# 邮件通知配置
ALERT_EMAIL_TO="admin@example.com"
ALERT_EMAIL_FROM="monitor@your-domain.com"
ALERT_EMAIL_SUBJECT="RabbitMQ 监控告警"
ENABLE_EMAIL_ALERT=true

# 日志配置
LOG_FILE="/var/log/rabbitmq-monitor.log"
LOG_LEVEL="info"

# 告警阈值
ALERT_THRESHOLD=3
ALERT_INTERVAL=300
