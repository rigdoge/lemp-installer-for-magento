#!/bin/bash

# 颜色定义
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

# 检查 Supervisor 依赖
check_supervisor_dependencies() {
    # 检查 supervisorctl 是否可用
    if ! command -v supervisorctl &> /dev/null; then
        echo -e "${RED}错误：supervisorctl 命令不可用${NC}"
        exit 1
    fi
    
    # 检查 Supervisor 服务状态
    if ! systemctl is-active --quiet supervisor 2>/dev/null; then
        echo -e "${RED}错误：Supervisor 服务未运行${NC}"
        exit 1
    fi
}

# 获取脚本所在目录
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# 检查依赖
check_supervisor_dependencies

# 检查 Supervisor 状态
check_supervisor_status() {
    local status_output
    status_output=$(supervisorctl status 2>&1)
    if [ $? -ne 0 ]; then
        echo -e "${RED}错误：无法获取 Supervisor 状态${NC}"
        echo "$status_output"
        exit 1
    fi
    
    # 检查是否有任何进程处于 FATAL 状态
    if echo "$status_output" | grep -q FATAL; then
        echo -e "${RED}错误：存在失败的进程${NC}"
        echo "$status_output"
        exit 1
    fi
    
    # 检查是否有任何进程处于 BACKOFF 状态
    if echo "$status_output" | grep -q BACKOFF; then
        echo -e "${YELLOW}警告：存在重启失败的进程${NC}"
        echo "$status_output"
        exit 2
    fi
    
    # 检查是否所有进程都在运行
    if ! echo "$status_output" | grep -q RUNNING; then
        echo -e "${YELLOW}警告：没有运行中的进程${NC}"
        echo "$status_output"
        exit 2
    fi
    
    echo -e "${GREEN}Supervisor 状态正常${NC}"
    echo "$status_output"
    exit 0
}

# 执行状态检查
check_supervisor_status 