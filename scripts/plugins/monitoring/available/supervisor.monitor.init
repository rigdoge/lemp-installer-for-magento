#!/bin/bash

# 颜色定义
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

# 检查 Supervisor 依赖
check_supervisor_dependencies() {
    # 检查 supervisord 是否安装
    if ! command -v supervisord &> /dev/null; then
        echo -e "${RED}错误：未安装 Supervisor${NC}"
        echo -e "请使用以下命令安装 Supervisor："
        echo -e "Ubuntu/Debian: sudo apt-get install supervisor"
        echo -e "CentOS/RHEL: sudo yum install supervisor"
        echo -e "macOS: brew install supervisor"
        exit 1
    fi
    
    # 检查 supervisorctl 是否安装
    if ! command -v supervisorctl &> /dev/null; then
        echo -e "${RED}错误：supervisorctl 命令不可用${NC}"
        echo -e "请重新安装 Supervisor"
        exit 1
    fi
    
    # 检查 Supervisor 服务状态
    if ! systemctl is-active --quiet supervisor 2>/dev/null; then
        echo -e "${YELLOW}警告：Supervisor 服务未运行${NC}"
        echo -e "请使用以下命令启动 Supervisor："
        echo -e "sudo systemctl start supervisor"
        exit 1
    fi
    
    # 检查配置目录
    if [ ! -d "/etc/supervisor/conf.d" ]; then
        echo -e "${YELLOW}警告：Supervisor 配置目录不存在${NC}"
        echo -e "创建配置目录..."
        sudo mkdir -p /etc/supervisor/conf.d
        sudo chmod 755 /etc/supervisor/conf.d
    fi
}

# 获取脚本所在目录
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# 检查依赖
check_supervisor_dependencies

